<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".DonorProfile">

    <RelativeLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorAccent">

        <ImageView
            android:id="@+id/ivBack"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
            android:layout_width="27dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:scaleType="center"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_back_arrow" />

        <TextView
            android:id="@+id/txt_title"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="center"
            android:text=""
            android:textColor="#000000"
            android:textSize="16dp" />

    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="20dp"
                android:weightSum="3">

                <TextView
                    android:id="@+id/DP_TV_national_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/donor_profile_national_id"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/DP_TV_show_national_id"
                    android:layout_width= "160dp"
                    android:layout_height="wrap_content"
                    android:text="TV NATIONAL ID"
                    android:layout_marginLeft="15dp"
                    android:textColor="#000000"
                    android:layout_weight="2"
                    android:textSize="20sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="20dp"
                android:weightSum="3">

                <TextView
                    android:id="@+id/DP_TV_name"
                    android:layout_width= "wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/donor_profile_name"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/DP_TV_show_name"
                    android:layout_width= "160dp"
                    android:layout_height="wrap_content"
                    android:text="TV NAME"
                    android:layout_marginLeft="15dp"
                    android:textColor="#000000"
                    android:layout_weight="2"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="20dp"
                android:weightSum="3">

                <TextView
                    android:id="@+id/DP_TV_blood_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/donor_profile_blood_type"
                    android:textColor="#000000"

                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/DP_TV_show_blood_type"
                    android:layout_width= "160dp"
                    android:layout_height="wrap_content"
                    android:text="TV BLOOD TYPE"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="2"
                    android:textColor="#000000"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="20dp"
                android:weightSum="3">

                <TextView
                    android:id="@+id/DP_TV_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/donor_profile_gender"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/DP_TV_show_gender"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="TV GENDER"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="2"
                    android:textColor="#000000"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="20dp"
                android:weightSum="3">

                <TextView
                    android:id="@+id/DP_TV_dob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/donor_profile_dob"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/DP_TV_show_dob"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="TV DOB"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="2"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="20dp"

                android:weightSum="3">

                <TextView
                    android:id="@+id/DP_TV_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/donor_profile_phone_number"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/DP_TV_show_phone"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="TV PHONE"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="2"
                    android:textColor="#000000"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="20dp"

                android:weightSum="3">

                <TextView
                    android:id="@+id/DP_TV_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/donor_profile_email"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/DP_TV_show_email"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="TV EMAIL"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="2"
                    android:textColor="#000000"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="20dp"

                android:weightSum="3">

                <TextView
                    android:id="@+id/DP_TV_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/donor_profile_address"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/DP_TV_show_address"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="TV ADDRESS"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="2"
                    android:textColor="#000000"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="20dp"

                android:weightSum="3">

                <TextView
                    android:id="@+id/DP_TV_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/donor_profile_city"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/DP_TV_show_city"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="TV CITY"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="2"
                    android:textColor="#000000"
                    android:textSize="20sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button
                    android:id="@+id/DP_B_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/donor_profile_update_button" />

                <Button
                    android:id="@+id/DP_B_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/donor_profile_delete_button" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>